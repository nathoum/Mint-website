
body
  overflow-x: hidden
  padding: 0
  margin: 0
  color #333
  background white
  font-family: Arial, sans-serif

  .header
    position: fixed
    top: 15px
    right: 0
    width: 50%
    min-width: 300px
    
    &--whiteTint
      color: white
    &--yellowTint
      color: yellow
    &--purpleTint
      color: purple
    &--turquoiseTint
      color: turquoise


    .navlist
      padding: 0
      margin: 0
      list-style: none
      text-transform: uppercase
      &-item
        width: 30%
        float: left
        &-link
          padding: 12px

  .container
    width: 100vw
    height: 100vh
    position: relative
    &-overlay
      width: 100%
      height: 100%
      position: absolute
      background-color: rgba(255, 255, 255, 0.8)

    &-videobackground
      position: absolute
      right: 0
      bottom: 0
      top: 0
      right: 0
      width: 100%;
      height: 100%;
      background-size: 100% 100%
      background-color: black
      background-position: center center
      background-size: contain
      object-fit: cover


    &--createBackground
      background: url(../images/background-create-mint.png) no-repeat center center
      background-size: cover

    &--friendsBackground
      background: url(../images/background-friends-surprise.png) no-repeat center center
      background-size: cover

    &--aroundBackground
      background: url(../images/background-aroundthem.png) no-repeat center center
      background-size: cover

    &--reactionBackground
      background: url(../images/background-reaction.png) no-repeat center center
      background-size: cover

