@import url('https://fonts.googleapis.com/css?family=Poppins')

body
  overflow-x: hidden
  padding: 0
  margin: 0
  color #333
  background white
  font-family: 'Poppins', sans-serif

  .header
    position: fixed
    top: 15px
    right: 0
    width: 50%
    max-width: 400px
    z-index: 10
    
    &--whiteTint
      color: white
    &--yellowTint
      color: yellow
    &--purpleTint
      color: purple
    &--turquoiseTint
      color: turquoise


    .navlist
      padding: 0
      margin: 0
      list-style: none
      text-transform: uppercase
      font-size: 1,5em
      &-item
        width: 30%
        max-width: 120px
        float: left
        margin-left: 5px
        &-link
          padding: 12px
          text-decoration: none
          color: white

  .container
    width: 100vw
    height: 100vh
    position: relative
    &-overlay
      width: 100%
      height: 100%
      position: absolute
      background-color: rgba(255, 255, 255, 0.8)

      &-bloc
        width: 50%

        &-wrapper
          display: table-cell
          vertical-align: middle


      &-bloc--tablePos
        height: 100%
        display: table

      &-bloc--left
        float: left

      &-bloc--right
        float: right

      &-h1
        &--aroundCustom
          color: #5CD6BF
          font-size: 2.0em
          text-transform: uppercase
          font-weight: normal

      &-text
        padding: 10px


    &-videobackground
      position: absolute
      right: 0
      bottom: 0
      top: 0
      right: 0
      width: 100%;
      height: 100%;
      background-size: 100% 100%
      background-color: black
      background-position: center center
      background-size: contain
      object-fit: cover


    &--createBackground
      background: url(../images/background-create-mint.png) no-repeat center center
      background-size: cover

    &--friendsBackground
      background: url(../images/background-friends-surprise.png) no-repeat center center
      background-size: cover

    &--aroundBackground
      background: url(../images/background-aroundthem.png) no-repeat center center
      background-size: cover

    &--reactionBackground
      background: url(../images/background-reaction.png) no-repeat center center
      background-size: cover

